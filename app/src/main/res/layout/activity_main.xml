<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1E1E1E"
    android:padding="10dp"
    android:id="@+id/main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                style="@style/btnTransparent"
                android:layout_width="60dp"
                android:textSize="18sp"
                android:layout_height="match_parent"
                android:text="☰" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Standard"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button android:text="⏱︎" style="@style/btnTransparent"
            android:layout_height="match_parent"
            android:textSize="26sp"
            android:layout_width="60dp"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:gravity="end|center_vertical"
        android:padding="20dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:textStyle="bold"  />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button android:text="MC" style="@style/btnTransparent" />
        <Button android:text="MR" style="@style/btnTransparent" />
        <Button android:text="M+" style="@style/btnTransparent" />
        <Button android:text="M-" style="@style/btnTransparent" />
        <Button android:text="MS" style="@style/btnTransparent" />
        <Button android:text="M∨" style="@style/btnTransparent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button android:text="%" style="@style/btnDark" />
        <Button android:text="CE" style="@style/btnDark" />
        <Button android:text="C" style="@style/btnDark" />
        <Button android:text="⌫" style="@style/btnDark" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button android:text="1/x" style="@style/btnDark" />
        <Button android:text="x²" style="@style/btnDark" />
        <Button android:text="²√x" style="@style/btnDark" />
        <Button android:text="÷" style="@style/btnDark"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button android:text="7" style="@style/btnLight" />
        <Button android:text="8" style="@style/btnLight" />
        <Button android:text="9" style="@style/btnLight" />
        <Button android:text="×" style="@style/btnDark"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button android:text="4" style="@style/btnLight" />
        <Button android:text="5" style="@style/btnLight" />
        <Button android:text="6" style="@style/btnLight" />
        <Button android:text="-" style="@style/btnDark" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <Button android:text="1" style="@style/btnLight" />
        <Button android:text="2" style="@style/btnLight" />
        <Button android:text="3" style="@style/btnLight" />
        <Button android:text="+" style="@style/btnDark" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <!-- Bottom Row -->
        <Button android:text="+/-" style="@style/btnLight" />
        <Button android:text="0" style="@style/btnLight" />
        <Button android:text="." style="@style/btnLight" />
        <Button android:text="=" style="@style/btnBlue" />
    </LinearLayout>


</LinearLayout>