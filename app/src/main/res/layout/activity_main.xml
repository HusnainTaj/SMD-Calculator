<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1E1E1E"
    android:padding="10dp"
    android:id="@+id/main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                style="@style/btnTransparent"
                android:layout_width="60dp"
                android:textSize="18sp"
                android:layout_height="match_parent"
                android:text="☰" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Standard"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button android:text="⏱︎" style="@style/btnTransparent"
            android:layout_height="match_parent"
            android:textSize="26sp"
            android:layout_width="60dp"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        tools:text="2 + 3 ="
        android:paddingHorizontal="20dp"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:gravity="end|center_vertical"
        android:padding="20dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:textStyle="bold"  />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button android:text="MC" style="@style/btnTransparent" />
        <Button android:text="MR" style="@style/btnTransparent" />
        <Button android:text="M+" style="@style/btnTransparent" />
        <Button android:text="M-" style="@style/btnTransparent" />
        <Button android:text="MS" style="@style/btnTransparent" />
        <Button android:text="M∨" style="@style/btnTransparent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button android:text="%" style="@style/btnDark" />
        <Button android:text="CE" style="@style/btnDark" />
        <Button android:text="C" android:id="@+id/clear" style="@style/btnDark" />
        <Button android:text="⌫" android:id="@+id/backspace" style="@style/btnDark" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button android:text="1/x" style="@style/btnDark" />
        <Button android:text="x²" style="@style/btnDark" />
        <Button android:text="²√x" style="@style/btnDark" />
        <Button android:text="÷" android:id="@+id/divide" style="@style/btnDark"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button android:text="7" android:id="@+id/num7" style="@style/btnLight" />
        <Button android:text="8" android:id="@+id/num8" style="@style/btnLight" />
        <Button android:text="9" android:id="@+id/num9" style="@style/btnLight" />
        <Button android:text="×" android:id="@+id/multiply" style="@style/btnDark"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button android:text="4" android:id="@+id/num4" style="@style/btnLight" />
        <Button android:text="5" android:id="@+id/num5" style="@style/btnLight" />
        <Button android:text="6" android:id="@+id/num6" style="@style/btnLight" />
        <Button android:text="-" android:id="@+id/minus" style="@style/btnDark" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <Button android:text="1" android:id="@+id/num1" style="@style/btnLight" />
        <Button android:text="2" android:id="@+id/num2" style="@style/btnLight" />
        <Button android:text="3" android:id="@+id/num3" style="@style/btnLight" />
        <Button android:text="+" android:id="@+id/plus" style="@style/btnDark" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <!-- Bottom Row -->
        <Button android:text="+/-" style="@style/btnLight" />
        <Button android:text="0" android:id="@+id/num0" style="@style/btnLight" />
        <Button android:text="." style="@style/btnLight" />
        <Button android:text="=" android:id="@+id/equal" style="@style/btnBlue" />
    </LinearLayout>


</LinearLayout>